<div class="container">
  <div class="row mt-3">
    <div class="col-md-6">
      <h2>Edit Contact Form</h2>

      <% if (typeof errors !='undefined' ) { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach(e=> { %>
              <li>
                <%= e.msg %>
              </li>
              <% }) %>
          </ul>
        </div>
        <% } %>

          <form method="post" action="/contact?_method=PUT">
            <input type="hidden" name="_id" value="<%= contact._id %>">
            <input type="hidden" name="oldNama" value="<%= (contact.oldNama) ? contact.oldNama : contact.nama %>">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Nama</label>
              <input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama %>">
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" required value="<%= contact.email %>">
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">No HP</label>
              <input type="string" class="form-control" id="nohp" name="nohp" required value="<%= contact.nohp %>">
            </div>
            <button type="submit" class="btn btn-primary">Edit Contact</button>
          </form>
    </div>
  </div>
</div>